<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Inicio">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="Black">

            <Image x:Name="Logo" HeightRequest="300" Margin="-5,-190,0,-200" VerticalOptions="CenterAndExpand" />
            

            <Button x:Name="btnEntrar"
                            BorderColor="Khaki"
                            BorderWidth="1"
                            CornerRadius="10"
                            HeightRequest="50"
                            WidthRequest="50"
                            BackgroundColor="Transparent"
                            Text="Começar"
                            TextColor="Khaki"
                            Clicked="btnEntrar_Clicked"
                            Margin="50, 0, 50, 100"
                            FontSize="18"
                            />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>