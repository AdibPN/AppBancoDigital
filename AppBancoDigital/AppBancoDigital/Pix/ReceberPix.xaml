             x:Class="AppBancoDigital.Pix.ReceberPix">

    <StackLayout>
        <Grid RowDefinitions="*, *, *, *" ColumnDefinitions="*" BackgroundColor="Black">
            <Image x:Name="logo" HeightRequest="200" VerticalOptions="CenterAndExpand" BackgroundColor="Black" Grid.Row="0" />
            <Button CornerRadius="100" Text="Ler um QR Code" Clicked="Button_Clicked" Grid.Row="1" BackgroundColor="Black" TextColor="Khaki" BorderColor="Khaki" />
        </Grid>
    </StackLayout>

</ContentPage>
  
        
          